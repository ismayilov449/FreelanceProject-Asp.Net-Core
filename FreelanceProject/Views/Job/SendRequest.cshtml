@model Job

@{
    ViewData["Title"] = "SendRequest";
}


<div class="bg-primary text-white p-1 m-1">
    <h2>Job.Title</h2>
</div>

@Model = new JobClientModel(); 

<form class="m-1 p-1" asp-action="SendRequest" method="post">

    <div class="text-danger" asp-validation-summary="All"></div>

    <div class="form-group">



        <label asp-for="Age"></label>
        <input type="text" class="form-control" asp-for="Age"> 

        <label asp-for="City"></label>
        <input type="text" class="form-control" asp-for="City"> 

        <label asp-for="Description"></label>
        <input type="text" class="form-control" asp-for="Description"> 

        <label asp-for="Education"></label>
        <input type="text" class="form-control" asp-for="Education">  

        <label asp-for="Experience"></label>
        <input type="text" class="form-control" asp-for="Experience">  

        <label asp-for="JobCategory.CategoryName"></label>
        <input type="text" class="form-control" asp-for="JobCategory.CategoryName">  

        <label asp-for="Position"></label>
        <input type="text" class="form-control" asp-for="Position">  

        <label asp-for="Price"></label>
        <input type="text" class="form-control" asp-for="Price">  

        <label asp-for="RequiredSkills"></label>
        <input type="text" class="form-control" asp-for="RequiredSkills">  


    </div>

    <input type="submit" class="btn btn-primary" value="Submit" />
   @* <a asp-action="SendRequest" class="btn btn-danger">Cancel</a>*@


</form>