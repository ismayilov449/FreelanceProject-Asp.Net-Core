        <label asp-for="@Model.CurrentFreelancer.Address"></label>
        <input type="text" class="form-control" asp-for="@Model.CurrentFreelancer.Address">

        <label asp-for="@Model.CurrentFreelancer.User.Description"></label>
        <input type="text" class="form-control" asp-for="@Model.CurrentFreelancer.User.Description">



        <label asp-for="@Model.CurrentFreelancer.Skills"></label>
